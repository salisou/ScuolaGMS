<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Pages.MyTaskMain"
             xmlns:vm="clr-namespace:MauiApp.ViewModels"
             xmlns:converters="clr-namespace:MauiApp.Converters"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#ccc6f4"
             Title="My Task Main">

    <ContentPage.BindingContext>
        <vm:MyTaskMainViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <converters:ColorConverter x:Key="ColorConverter"/> 
    </ContentPage.Resources>

    <!--Griglia principala Scaffold-->
    <Grid Margin="15" RowDefinitions=".1*, .3*, .7*">
        <Label Text="My Task" StyleClass="DarkBlue, Header"/>
        <Grid Grid.Row="1" RowDefinitions=".2*, .8*">
            <Label StyleClass="LightBlue, SubHeader" Text="CATEGORY"/>
            <CollectionView Grid.Row="1" ItemsSource="{Binding Categories}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="15" Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <RoundRectangle/>
                            <VerticalStackLayout Padding="15" Spacing="10">
                                <Label StyleClass="LightBlue" Text="{Binding PendingTasks, StringFormat='{0} Tasks'}"/>
                                <Label Text="{Binding CategoryName}" StyleClass="DarkBlue, CardTitle"/>
                                <ProgressBar Progress="{Binding Percentage}" ProgressColor="{Binding Color, Converter={StaticResource ColorConverter}}"/>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <Grid Grid.Row="2" RowDefinitions=".2*, .8*">
            <Label Text="PENDING PAGE" StyleClass="LightBlue, SubHeader"/>
            <CollectionView Grid.Row="1" ItemsSource="{Binding Tasks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFFFEF"
                                    StrokeShape="12"
                                    StrokeThickness="1"
                                    Opacity="20"
                                    Margin="0,5">
                            <HorizontalStackLayout>
                                <CheckBox x:Name="checkBox"
                                              IsChecked="{Binding Completed}"
                                              VerticalOptions="Center"
                                              CheckedChanged="checkBox_CheckedChanged"
                                              Color="{Binding TaskColor, Converter={StaticResource ColorConverter}}"/>
                                <Label Text="{Binding TaskName}" VerticalOptions="Center" TextColor="Black">
                                    <Label.Triggers>
                                        <DataTrigger Binding="{Binding Source={x:Reference checkBox}, Path=IsChecked}"
                                                         TargetType="Label"
                                                         Value="True">
                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <Button Grid.Row="2"
                Text="+"
                x:Name="btnNewTask"
                Clicked="btnNewTask_Clicked"
                Style="{StaticResource CircularButton}"/>
    </Grid>

</ContentPage>