<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Pages.MainPage"
             BackgroundColor="DarkSlateGrey"
             Title="Home Page">
    
    <ScrollView>
        <StackLayout   Margin="20,20">
            <!-- Example of a SearchBar control -->
            <SearchBar x:Name="ricercaControl"
                       BackgroundColor="White"
                       TextColor="Gray"
                       SearchButtonPressed="ricercaControl_SearchButtonPressed"/>

            <!-- Example of a Button control -->
            <Button x:Name="btnTest"
                    Text="Click Me!"
                       Margin="20,20"
                    Clicked="btnTest_Clicked"/>


            <!-- Example of an ImageButton control -->
            <!--<ImageButton Source="dotnet_bot.png"
                         HeightRequest="250"
                         WidthRequest="250"
                         Margin="10"
                         x:Name="ibtnDot"
                         Clicked="ibtnDot_Clicked"/>-->
            <SwipeView>
                <SwipeView.LeftItems>
                    <SwipeItems>
                        <SwipeItem BackgroundColor="LightGreen"
                                   IconImageSource="salva.png"
                                   Invoked="SwipeItem_Invoked"
                                   Text="Salva"/>
                        <SwipeItem BackgroundColor="White"
                                   IconImageSource="cancella.png"
                                   Invoked="SwipeItem_Invoked_1"
                                   Text="Cancella"/>
                    </SwipeItems>
                </SwipeView.LeftItems>
                <Grid BackgroundColor="LightCyan"
                      HeightRequest="60"
                      WidthRequest="300"
                      Margin="10">
                    <Label Text="Prova"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Grid>
            </SwipeView>
            <!-- Example of RadioButton controls -->
            <RadioButton Content="Option 1"
                         GroupName="group1"
                         CheckedChanged="RadioButton_CheckedChanged"/>

            <!-- Example of RadioButton controls -->
            <RadioButton Content="Option 2"
                         GroupName="group1"
                      CheckedChanged="RadioButton_CheckedChanged"/>
            <RadioButton Content="Option 3"
                         GroupName="group1"
                      CheckedChanged="RadioButton_CheckedChanged"/>
            <RadioButton Content="Option 4"
                         GroupName="group1"
                      CheckedChanged="RadioButton_CheckedChanged"/>



    </StackLayout>
    </ScrollView>
</ContentPage>
    
    